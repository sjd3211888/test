group idlTypes;

type_5() ::= <<float>>

type_6() ::= <<double>>

type_13() ::= <<long double>>

type_1() ::= <<short>>

type_2() ::= <<long>>

type_11() ::= <<long long>>

type_3() ::= <<unsigned short>>

type_4() ::= <<unsigned long>>

type_12() ::= <<unsigned long long>>

type_8() ::= <<char>>

type_14() ::= <<wchar>>

type_7() ::= <<boolean>>

type_9() ::= <<octet>>

type_d(maxsize) ::= <<string$if(maxsize)$<$maxsize$>$endif$>>

type_15(maxsize) ::= <<wstring$if(maxsize)$<$maxsize$>$endif$>>

type_f(package, firs, secon, type) ::= <<$firs$$type$>>

type_a(name) ::= <<$name$>>

type_b(name) ::= <<$name$>>

type_c(name) ::= <<$name$>>

type_10(name) ::= <<$name$>>

type_1e(name) ::= <<uint8>>

type_1a(name, type) ::= <<$name$>>

type_1b(name) ::= <<$name$>>

type_1d(name) ::= <<int8>>

type_e(type, maxsize, empty) ::= <<sequence<$type$$if(maxsize)$, $maxsize$$endif$ >$empty$>>

type_19(key, value, maxsize, empty) ::= <<map<$key$, $value$$if(maxsize)$, $maxsize$$endif$>$empty$>>
